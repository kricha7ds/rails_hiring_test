<p style="color: green"><%= notice %></p>

<h1 class="text-xl font-semibold leading-6 text-gray-900"><%= @riding.name %> - <%= @riding.riding_code %></h1>
<%= @riding.province %>

<h2 class="mt-4 text-lg font-semibold leading-6 text-gray-900">Polling locations</h2>

<div class="mt-6 p-6 border border-gray-500 rounded-lg grid grid-cols-7 gap-y-6 gap-x-4">
  <div class="col-span-2 font-medium">
    Title
  </div>

  <div class="col-span-1 font-medium">
    Address
  </div>

  <div class="col-span-1 font-medium">
    City
  </div>

  <div class="col-span-1 font-medium">
    Postal code
  </div>

  <div class="col-span-1 font-medium">
    Polls
  </div>

  <div class="col-span-1 font-medium">
  </div>

  <div id="polling_locations" class="contents">
    <% if @polling_locations.any? %>
      <% @polling_locations.each do |polling_location| %>
        <%= render partial: "polling_locations/polling_location", locals: { polling_location: polling_location, riding: @riding } %>
      <% end %>
    <% end%>
  </div>

  <%= turbo_frame_tag "new_polling_location", class: "contents" do %>
    <div class="col-span-7 text-center mt-3">
      <%= link_to "+ Add polling location", new_riding_polling_location_path(@riding),
                  class: "flex justify-center items-center py-2 rounded-md bg-neutral-200 hover:cursor-pointer hover:bg-neutral-300 transition duration-150",
                  data: { turbo_frame: "new_polling_location" }
      %>
    </div>
  <% end %>
</div>
